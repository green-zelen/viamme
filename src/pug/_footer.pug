extends _modals.pug

block footer
	div.container
		div.container__inner
			// Footer
			footer.footer
				// footer__top
				div.footer__top.grid
					div.footer__top__socials(href="#")
						a.social__link.dark
							i.fab.fa-facebook-f
						a.social__link.dark(href="#")
							i.fab.fa-instagram
					div.footer__top__settings
						div.form__footer_settings
							form.form(action="")
								div.form__body
									div.form__field.form__field__language
										div.form__select.form__select_with-dropdown-icon
											select.select(value="Русский")
												option(value="Русский") Русский
												option(value="English") English
											i.fa.fa-caret-down
									div.form__field.form__field__currency
										div.form__select.form__select_with-dropdown-icon
											select.select(value="Рубль ₽")
												option(value="Рубль ₽") Рубль ₽
												option(value="Euro €") Euro €
												option(value="USD $") USD $
											i.fa.fa-caret-down
				// footer__bottom
				div.footer__bottom.grid
					div.footer__bottom__navigation
						nav.footer__bottom__navigation__links
							a.navigation__link.dark(href="#") Условия
							a.navigation__link.dark(href="#") Конфиденциальность
							a.navigation__link.dark(href="#") Поддержка
					div.footer__bottom__copyright
						span Copyright 2019. Viamme